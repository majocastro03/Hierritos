<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 0px; -fx-spacing: 0px;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.almacenhierritos.MenuController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: white; -fx-padding: 10px;">
         <children>
            <ImageView fitHeight="80.0" fitWidth="298.0" pickOnBounds="true" preserveRatio="true" style="-fx-translate-x: 10;">
               <image>
                  <Image url="@Images/logo.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <VBox alignment="CENTER" prefHeight="402.0" prefWidth="900.0" style="-fx-padding: 70 px;">
         <children>
            <ImageView fitHeight="402.0" fitWidth="900.0" pickOnBounds="true">
               <image>
                  <Image url="@Images/fondoAlmacen.jpg" />
               </image>
            </ImageView>
         </children></VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 40;">
         <children>
            <Button fx:id="botonNuevaOrden" mnemonicParsing="false" onAction="#clickNuevaOrden" prefHeight="37.0" prefWidth="150.0" style="-fx-background-color: #0e103c;" text="Nueva Orden" textFill="#f7f7f7">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="botonBuscarProveedor" mnemonicParsing="false" onAction="#clickBuscarProveedor" prefHeight="37.0" prefWidth="150.0" style="-fx-background-color: #0e103c;" text="Buscar Proveedor" textFill="#f7f7f7">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="botonAccederInventario" mnemonicParsing="false" onAction="#clickAccederInventario" prefHeight="37.0" prefWidth="150.0" style="-fx-background-color: #0e103c;" text="Acceder Inventario" textFill="#f7f7f7">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
